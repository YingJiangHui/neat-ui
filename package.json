{
  "name": "neat-ui-react",
  "version": "0.0.5",
  "scripts": {
    "start": "dumi dev",
    "docs:build": "dumi build",
    "docs:deploy": "npx gh-pages --dotfiles --message \"[skip ci] Updates\" --dist docs-dist",
    "build": "father-build",
    "deploy": "npm run docs:build && npm run docs:deploy",
    "release": "npm run build && npm publish",
    "prettier": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\"",
    "test": "umi-test",
    "test:coverage": "umi-test --coverage"
  },
  "jest": {
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "babel-jest",
        {
          "configFile": "./tests/.babelrc.js"
        }
      ]
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/*"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-jsx": "^3.4.4"
  },
  "devDependencies": {
    "@styled-jsx/plugin-sass": "^3.0.0",
    "@testing-library/react-hooks": "^7.0.0",
    "@types/jest": "^26.0.23",
    "@types/react-test-renderer": "^17.0.1",
    "@umijs/test": "^3.0.5",
    "dart-sass": "^1.25.0",
    "dumi": "^1.1.18",
    "father-build": "^1.17.2",
    "gh-pages": "^3.0.0",
    "hex-to-rgba": "^2.0.1",
    "lint-staged": "^10.0.7",
    "prettier": "^2.2.1",
    "react-test-renderer": "^17.0.2",
    "sass": "^1.34.1",
    "svg-sprite-loader": "^6.0.7",
    "yorkie": "^2.0.0"
  }
}
